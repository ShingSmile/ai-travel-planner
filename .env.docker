NODE_ENV=production
PORT=3000

# Supabase 基础配置（需替换为你自己的项目地址与密钥）
SUPABASE_URL=https://your-instance.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
NEXT_PUBLIC_SUPABASE_URL=https://your-instance.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=anon-key

# 大模型服务（示例：阿里云百炼）
BAILIAN_API_KEY=your-bailian-api-key
BAILIAN_MODEL=qwen-max

# 地图服务（示例：高德地图）
NEXT_PUBLIC_AMAP_KEY=your-amap-web-key
AMAP_REST_KEY=your-amap-rest-key

# 语音识别服务（默认使用 mock，可切换 iflytek/openai）
VOICE_RECOGNIZER_PROVIDER=mock
VOICE_RECOGNIZER_TIMEOUT_MS=45000
IFLYTEK_APP_ID=
IFLYTEK_API_KEY=
IFLYTEK_API_SECRET=
IFLYTEK_API_BASE_URL=https://api.xfyun.cn/v1/service/v1/iat
IFLYTEK_ENGINE_TYPE=intelligent_general
IFLYTEK_AUDIO_ENCODING=raw
IFLYTEK_RESULT_LEVEL=complete
IFLYTEK_LANGUAGE=zh_cn
IFLYTEK_ACCENT=mandarin
IFLYTEK_REAL_IP=127.0.0.1
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_VOICE_MODEL=gpt-4o-mini-transcribe

# 接口限流默认值（毫秒/次数，可按需调整）
GLOBAL_API_RATE_LIMIT_WINDOW_MS=60000
GLOBAL_API_RATE_LIMIT_MAX=120
LLM_RATE_LIMIT_WINDOW_MS=60000
LLM_RATE_LIMIT_MAX=3
VOICE_RATE_LIMIT_WINDOW_MS=60000
VOICE_RATE_LIMIT_MAX=10
